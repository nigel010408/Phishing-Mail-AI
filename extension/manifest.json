{
  "manifest_version": 3,
  "name": "Gmail AI Extension",
  "description": "A Chrome extension that connects Gmail with an AI server for email analysis.",
  "version": "1.0",

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "http://localhost:5000/*",
    "http://mail.mijnkreft.site:3000/*",
    "https://mijnkreft.site/*"
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
